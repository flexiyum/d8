#wget -O /etc/iptables.up.rules  "https://raw.githubusercontent.com/sslmode/sslmode/master/iptables.up.rules"
#sed -i "s/ipserver/$myip/g" /etc/iptables.up.rules
#iptables-restore < /etc/iptables.up.rules
# ettc
